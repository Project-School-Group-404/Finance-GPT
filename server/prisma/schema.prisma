generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String?
  password  String?
  provider  String? @default("local") // 'local', 'google', etc.
  createdAt DateTime @default(now())
  chats     Chat[]  
}

model Chat {
  id             Int      @id @default(autoincrement())
  userMessage    String
  assistantReply String
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  createdAt      DateTime @default(now())
  
  // Multiple documents stored as JSON array
  documents      Json?    // Array of document objects: [{name, type, path, size, uploadedAt}, ...]
  
  // Legacy single document fields - kept for backward compatibility
  documentName   String?  // original filename
  documentType   String?  // 'pdf', 'image', 'excel'
  documentPath   String?  // where file is stored
  documentSize   Int?     // file size in bytes
  uploadedAt     DateTime? // when document was uploaded
}